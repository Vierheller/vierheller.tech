/*
-----------------------------------------------------
  General Layout
-----------------------------------------------------
*/

html body
  box-sizing border-box
  font-family: 'Open Sans', sans-serif;

#btn-landing
  margin-top 30px

.fullscreen
  height 100vh
  display: inline-block
  width 100%

.fullscreen-min
  min-height 100vh
  display: inline-block
  width 100%

section#section-header
  background-image url('../img/header-code.jpg')
  background-repeat:no-repeat;
  background-size cover

  > div.header-container
    position: relative;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    text-align center

    h3
      line-height 50px
      color:white
      letter-spacing 6px;
      font-size 50px

.sticky
  position: fixed !important;
  top:0;
  width 100%

/*
-----------------------------------------------------
  Fine tuning
-----------------------------------------------------
*/

#navWrap
  height 56px;

.parallax
  /* Create the parallax scrolling effect */
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

.title
  margin-top 66px;
  text-align center

.navbar
  z-index 1000

.img
  width 100%

.information

  li
    list-style-type none
    line-height 50px

/*
  Timeline for CV
 */
.timeline
  position: relative;
  max-width: 1200px;
  margin: 0 auto;

.timeline::after
  content: '';
  position: absolute;
  width: 2px;
  background-color: grey;
  top: 0;
  bottom: 0;
  left: 15px
  margin-left: -3px;

/* Container around content */
.timeline-container
  padding: 10px 0 10px 40px
  position: relative
  background-color: inherit

.timeline-container::before
  content: " ";
  height: 0;
  position: absolute;
  top: 22px;
  width: 0;
  z-index: 1;
  left: 30px;
  border: medium solid white
  border-width: 10px 10px 10px 0
  border-color: transparent white transparent transparent

/* The circles on the timeline */
.timeline-container::after
  content: ''
  position: absolute
  width: 26px
  height: 26px
  left 0px
  background-color: white
  border: 4px solid lightgray
  top: 15px
  border-radius: 50%
  z-index: 1


.contact-box
  margin-bottom 16px
  line-height 18px
  h3
    font-size 16px
    margin 0
    float: left;
    width 100px

  span
    display inline-block

  &:after
    clear both

.clear
  clear: both;
/*
  Social Media Buttons
*/
.social-media-buttons
  padding-left 0
  margin-top 16px
  text-align center
  > li
    display inline
    width: 30px;
    margin 0 8px 0 8px
  /* Style all font awesome icons */

  .fa
    padding 10px
    font-size: 30px;
    width: 50px;
    height: 50px;
    text-align: center;
    text-decoration: none;
    border-radius: 50%;


  /* Add a hover effect if you want */
  .fa:hover
    opacity: 0.7;


  /* Set a specific color for each brand */

  /* Facebook */
  .fa-facebook
    background: #3B5998;
    color: white;

  /* Twitter */
  .fa-twitter
    background: #55ACEE;
    color: white;

  .fa-linkedin {
    background: #007bb5;
    color: white;
  }

  .fa-github{
    background: #24292e
    color: white;
  }


footer
  .container
    border-top 1px solid black
    line-height 50px
    height 50px
    text-align center;



